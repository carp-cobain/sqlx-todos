  "components": {
    "schemas": {
      "AddFile": {
        "type": "object",
        "required": [
          "file"
        ],
        "properties": {
          "file": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "CreateTaskBody": {
        "type": "object",
        "description": "The POST body for creating tasks",
        "required": [
          "name",
          "story_id"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "story_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "ErrorDto": {
        "type": "object",
        "description": "The type sent as an error response to the client.",
        "required": [
          "errors"
        ],
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "PatchTaskBody": {
        "type": "object",
        "description": "The PATCH body for updating tasks",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "Status": {
        "type": "string",
        "enum": [
          "incomplete",
          "complete"
        ]
      },
      "Stories": {
        "type": "object",
        "description": "A page of stories",
        "required": [
          "stories"
        ],
        "properties": {
          "next_page": {
            "type": "string",
            "nullable": true
          },
          "stories": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Story"
            }
          }
        }
      },
      "Story": {
        "type": "object",
        "required": [
          "id",
          "name",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "StoryBody": {
        "type": "object",
        "description": "The request body for creating or updating stories",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "StoryFile": {
        "type": "object",
        "required": [
          "id",
          "story_id",
          "name",
          "size",
          "content_type",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "content_type": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "format": "int64"
          },
          "story_id": {
            "type": "string",
            "format": "uuid"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Task": {
        "type": "object",
        "required": [
          "id",
          "story_id",
          "name",
          "status",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "status": {
